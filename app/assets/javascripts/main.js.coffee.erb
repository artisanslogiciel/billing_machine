@app = angular.module("Backbone", ["ngResource", "ngRoute"])

# Ceci est un commentaire inutile

@app.config(($routeProvider) ->
  $routeProvider
    .when('/invoices',
      templateUrl: "<%= asset_path 'invoices/index.html'%>",
      controller: "InvoicesCtrl")
    .when('/invoices/new',
      templateUrl: "<%= asset_path 'invoices/new.html'%>",
      controller: "InvoiceCtrl")
    .when('/invoices/:id',
      templateUrl: "<%= asset_path 'invoices/new.html'%>",
      controller: "InvoiceCtrl")
    .otherwise('/invoices',
      templateUrl: "<%= asset_path 'invoices/index.html'%>",
      controller: "InvoicesCtrl")
)
